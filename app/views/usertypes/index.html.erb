
<h1>Usertypes</h1>

<table class="table table-hover table-striped table-bordered">
  <thead class="thead-dark">
    <tr>
      <th>Usertype ID</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @usertypes.each do |usertype| %>
      <tr>
        <td><%= usertype.id %></td>
        <td><%= usertype.name %></td>
        <td><%= link_to 'Show', usertype, class: "btn btn-outline-info" %></td>
        <td><%= link_to 'Edit', edit_usertype_path(usertype), class: "btn btn-outline-secondary" %></td>
        <td><%= link_to 'Destroy', usertype, class: "btn btn-outline-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Usertype', new_usertype_path, class: "btn btn-secondary" %>

<%= link_to 'Home', root_path, class: "btn btn-secondary" %>