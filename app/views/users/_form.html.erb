<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.text_field :name, class: "form-control", placeholder: "Username" %>
  </div>

  <div class="field form-group">
    <%= form.text_field :email, class: "form-control", placeholder: "E-Mail" %>
  </div>

  <div class="field form-group">
    <%= form.text_field :phone, class: "form-control", placeholder: "Phone" %>
  </div>

  <div class="field input-group mb-3">
    <div class="input-group-prepend">
      <label class="input-group-text" for="inputGroupSelect01">Usertype ID</label>
    </div>
    <%= form.select :usertype_id, Usertype.all.pluck(:id), {prompt: 'select'}, {class: "custom-select"} %>
  </div>

  <div class="field input-group mb-3">
    <div class="input-group-prepend">
      <label class="input-group-text" for="inputGroupSelect01">School ID</label>
    </div>
    <%= form.select :school_id, School.all.pluck(:id), {prompt: 'select'}, {class: "custom-select"} %>
  </div>

  <div class="actions form-group">
    <%= form.submit class: "btn btn-secondary" %>
  </div>
<% end %>
