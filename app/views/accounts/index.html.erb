
<nav class="navbar navbar-light bg-light">
  <h1>Accounts</h1>
  <%= form_tag accounts_path, :method => 'get' do %>
    <p class="form-inline">
      <%= link_to 'New Account', new_account_path, class: "form-control mr-sm-2 btn btn-secondary" %>
      <%= text_field_tag :search, params[:search], class: "form-control mr-sm-2" %>
      <%= submit_tag "Search", :name => nil, class: "btn btn-outline-success my-2 my-sm-0" %>
    </p>
  <% end %>
</nav>

<table class="table table-hover table-striped table-bordered">
  <thead class="thead-dark">
    <tr>
      <th>Account ID</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.id%></td>
        <td><%= account.name %></td>
        <td><%= link_to 'Show', account, class: "btn btn-outline-info" %></td>
        <td><%= link_to 'Edit', edit_account_path(account), class: "btn btn-outline-secondary" %></td>
        <td><%= link_to 'Destroy', account, class: "btn btn-outline-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

