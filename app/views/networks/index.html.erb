<h1>Networks</h1>

<table class="table table-hover table-striped table-bordered">
  <thead class="thead-dark">
    <tr>
      <th>Network ID</th>
      <th>Name</th>
      <th>Account ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @networks.each do |network| %>
      <tr>
        <td><%= network.id %></td>
        <td><%= network.name %></td>
        <td><%= network.account_id %></td>
        <td><%= link_to 'Show', network %></td>
        <td><%= link_to 'Edit', edit_network_path(network) %></td>
        <td><%= link_to 'Destroy', network, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Network', new_network_path, class: "btn btn-secondary" %>

<%= link_to 'Home', root_path, class: "btn btn-secondary" %>
